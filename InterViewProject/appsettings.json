{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.AspNetCore": "Warning"
      }
    },
    "Enrich": [ "FromLogContext" ],
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "./logs/log-.txt",//Log寫入TXT檔案
          "rollingInterval": "Day" //Log檔案為一天一個
        }
      }
    ]
  },
  "AllowedHosts": "*"
}
@{
    ViewData["Title"] = "商品詳細資訊";
}
@model ProductViewModel

<div class="card  container pt-4">
    <div class="card-header bg-dark text-light ml-0  row ">
        <div class="col-12 col-md-6">
            <h1 class="text-white-50">@Model.ProductName</h1>
        </div>
        <div class="col-12 col-md-6 text-end pt-4">
            <span class="badge bg-warning pt-2" style="height:30px;">@Model.CategoriesName</span>
        </div>
    </div>
    <div class="card-body row container">
        <div class="container rounded p-2">
            <div class="row">
                <div class="col-8 col-lg-8">
                    <div class="row pl-2">
                        <h5 class="text-muted">產地: @Model.CountryName</h5>
                    </div>
                    <div class="row pl-2">
                        <h5 class="text-muted">區域: @Model.ContinentName</h5>
                    </div>
                    @if (Model.RoastingName is not null)
                    {
                        <div class="row pl-2">
                            <h5 class="text-muted">烘培度: @Model.RoastingName</h5>
                        </div>
                    }
                    <div class="row pl-2">
                        <p class="text-secondary">商品描述:@Html.Raw(Model.Description)</p>
                    </div>
                    <div class="row text-center pl-2" style="color:maroon; font-weight:bold">
                        <div class="p-1 col-2 bg-light">
                            <div>Price:@Model.Price?.ToString("c0")</div>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-lg-3 offset-lg-1 text-center">
                    <img src="@Model.MainPhotoPath" width="100%" class="rounded" />
                </div>
            </div>
        </div>
    </div>
    <div class="card-footer">
        <div class="row">
            <div class="col-12 col-md-6 pb-1">
                <a class="btn btn-success form-control " style="height:35px;" asp-action="Index">Back to Home</a>
            </div>
        </div>
    </div>
</div>


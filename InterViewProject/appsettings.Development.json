{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.AspNetCore": "Warning"
      }
    },
    "Enrich": [ "FromLogContext" ],
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "./logs/log-.txt", //Log寫入TXT檔案
          "rollingInterval": "Day" //Log檔案為一天一個
        }
      }
    ]
  },
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=.;Initial Catalog=Coffee;Integrated Security=True;Encrypt=True;Trust Server Certificate=True"
  },
  "AllowedHosts": "*"
}